{
  "manifest_version": 2,
  "name": "WebNotes",
  "version": "1.0",
  "description": "This is a test description change it later!",
  "icons": {
    "16": "/icons/robit_16.png",
    "48": "/icons/robit_48.png",
    "128": "/icons/robit_128.png"
  },

  "browser_action": {
    "default_icon": {
      "19": "/icons/robit_sleep_19.png",
      "38": "/icons/robit_48.png"
    },
    "default_title": "WebNotes",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "contextMenus",
    "cookies",
    "*://*/*"
  ],
  "background": {
    // "scripts": ["/background/background.js"]
    "page": "/background/background.html"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["/content/content.js"]
  }]

}

