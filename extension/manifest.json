{
  "manifest_version": 2,
  "name": "WebNotes",
  "version": "1.0",
  "description": "This is a test description change it later!",
  "icons": {
    "16": "/icons/robit_16.png",
    "48": "/icons/robit_48.png",
    "128": "/icons/robit_128.png"
  },
  "background": {
   // "scripts": ["/background/background.js"]
   "page": "/background/background.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "background",
    "cookies",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": [ "*://*/*"],
    "js": ["/js/dependencies/jquery-1.11.3.min.js","/js/dependencies/jquery-ui.min.js", "/content/globals.js", "/content/note.js", "/content/content.js", "/js/dependencies/bluebird.min.js"],
    "css": ["/css/content.css", "/css/jquery-ui.min.css"]
  }],
  "browser_action": {
    "default_icon": {
      "19": "/icons/robit_sleep_19.png",
      "38": "/icons/robit_48.png"
    },
    "default_title": "WebNotes",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "/icons/rotate-symbol.png",
    "/js/dependencies/externalMain.js"
  ],
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://127.0.0.1/*"]
  },
  "incognito": "split"
}

