{
  "manifest_version": 2,
  "name": "Noto",
  "version": "1.0",
  "description": "Virtual post-its with real-time collaboration",
  "icons": {
    "16": "/icons/icon16.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "background": {
   "page": "/background/background.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "background",
    "cookies",
    "*://*/*"
  ],
  "content_scripts": [{
    "matches": [ "*://*/*"],
    "js": [
      "/js/dependencies/jquery-1.11.3.min.js",
      "/js/dependencies/jquery-ui.min.js",
      "/content/globals.js",
      "/content/note.js",
      "/content/content.js",
      "/js/dependencies/bluebird.min.js"
    ],
    "css": [
      "/css/content.css",
      "/css/jquery-ui.min.css"
    ]
  }],
  "browser_action": {
    "default_icon": {
      "19": "/icons/icon19.png",
      "38": "/icons/icon38.png"
    },
    "default_title": "Noto",
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    "/icons/delete.png",
    "/icons/record.png",
    "/icons/stop.png",
    "/icons/play.png",
    "/icons/corkboard.png",
    "/icons/postit400.png",
    "/js/dependencies/externalMain.js",
    "/css/jquery-ui.min.css",
    "/css/font-awesome.min.css",
    "/fonts/*"
  ],
  "externally_connectable": {
    "ids": ["*"],
    "matches": ["*://127.0.0.1/*"]
  },
  "incognito": "split"
}

